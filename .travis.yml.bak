language: node_js
git:
  depth: 3
node_js:
  - 8
cache:
  directories:
  - node_modules
script:
  - cd server
  - npm run build
  - ls -all
addons:
  ssh_known_hosts: 120.78.221.76
before_deploy: 
  - openssl aes-256-cbc -K $encrypted_14bd9671f130_key -iv $encrypted_14bd9671f130_iv -in .pyramid_deploy_rsa.enc -out .ssh/.pyramid_deploy_rsa -d
  - eval "$(ssh-agent -s)"
  - chmod 600 /tmp/deploy_rsa
  - ssh-add /tmp/deploy_rsa
deploy:
  provider: script
  skip_cleanup: true
  script: 
    - pwd
    - ls -all
    - rsync -r --delete-after --quiet $TRAVIS_BUILD_DIR/dist $deploy_user@120.78.221.76:$DEPLOY_PATH
  on:
    branch: master