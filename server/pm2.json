{
  "apps": [
    {
      "name": "pyramid-server",
      "cwd": "src",
      "script": "index.js",
      "instances": "2",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "development",
        "PORT": 8000
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 8000,
        "HOST": "0.0.0.0"
      },
      "log_date_format": "YYYY-MM-DD_HH:mm Z",
      "merge_logs": true
    }
  ]
}
